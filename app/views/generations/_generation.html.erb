<div id="<%= dom_id generation %>" class="image-card">
  <% if generation.image.attached? %>
    <%= link_to rails_blob_path(generation.image, disposition: "attachment", only_path: true), 
        class: "block relative lightgallery-item",
        data: { 
          src: rails_blob_path(generation.image, disposition: "attachment", only_path: true),
          sub_html: "<h4>#{generation.style_preset}</h4><p>AI Generated Image</p>"
        } do %>
      <%= image_tag rails_blob_path(generation.image.variant(:thumb), disposition: "attachment", only_path: true), 
          class: "w-full h-32 object-cover",
          loading: "lazy",
          alt: generation.style_preset %>
      
      <!-- Overlay with style name -->
      <div class="absolute inset-0 bg-gradient-to-t">
        <div class="absolute bottom-2 left-2 right-2">
          <p class="text-white text-xs font-medium truncate">
            <%= generation.style_preset %>
          </p>
        </div>
      </div>
    <% end %>
  <% else %>
    <!-- Loading state with warm colors -->
    <div class="bg-gradient-to-br from-orange-100 to-amber-100 rounded-xl h-32 flex flex-col items-center justify-center">
      <div class="loading-spinner mb-2"></div>
      <p class="text-orange-700 text-xs font-medium"><%= generation.style_preset %></p>
      <p class="text-orange-600 text-xs">Creating magic...</p>
    </div>
  <% end %>
</div>
