<%= form_with(model: generation, class: "contents") do |form| %>
  <% if generation.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(generation.errors.count, "error") %> prohibited this generation from being saved:</h2>

      <ul class="list-disc ml-6">
        <% generation.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :style_preset %>
    <%= form.text_field :style_preset, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation.errors[:style_preset].none?, "border-red-400 focus:outline-red-600": generation.errors[:style_preset].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :user_id %>
    <%= form.text_field :user_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation.errors[:user_id].none?, "border-red-400 focus:outline-red-600": generation.errors[:user_id].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :generation_array_id %>
    <%= form.text_field :generation_array_id, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation.errors[:generation_array_id].none?, "border-red-400 focus:outline-red-600": generation.errors[:generation_array_id].any?}] %>
  </div>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
