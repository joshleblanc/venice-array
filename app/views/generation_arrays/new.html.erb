<% is_copy = params[:action] == 'copy' %>
<% content_for :title, is_copy ? "Copy Art Collection" : "Create New Art Collection" %>

<div class="w-full">
  <% if notice.present? %>
    <div class="mb-8 p-4 bg-gradient-to-r from-green-100 to-emerald-100 border border-green-200 rounded-xl shadow-sm">
      <p class="text-green-700 font-medium flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
        </svg>
        <%= notice %>
      </p>
    </div>
  <% end %>

  <!-- Header -->
  <div class="text-center mb-12">
    <div class="flex items-center justify-center mb-4">
      <%= link_to generation_arrays_path, class: "text-orange-600 hover:text-orange-700 mr-4 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="heading-font text-5xl md:text-6xl font-bold bg-gradient-to-r from-orange-600 via-amber-600 to-orange-500 bg-clip-text text-transparent">
        <%= is_copy ? "Copy Collection" : "Create New Collection" %>
      </h1>
    </div>
    <% if is_copy %>
      <div class="mb-4 p-4 bg-blue-50 border border-blue-200 rounded-xl max-w-2xl mx-auto">
        <p class="text-blue-700 font-medium flex items-center justify-center">
          <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
          </svg>
          Settings copied! Modify as needed and create your new collection.
        </p>
      </div>
    <% end %>
    <p class="text-xl text-gray-600 max-w-3xl mx-auto">
      <%= is_copy ? "Review and modify the copied settings below, then create your new collection." : "Transform your creative vision into stunning AI-generated artwork. Choose your style, set your parameters, and watch your imagination come to life." %>
    </p>
  </div>

  <!-- Form -->
  <%= render "form", generation_array: @generation_array %>
</div>
