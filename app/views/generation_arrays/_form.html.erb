<%= form_with(model: generation_array, class: "contents") do |form| %>
  <% if generation_array.errors.any? %>
    <div id="error_explanation" class="bg-red-50 text-red-500 px-3 py-2 font-medium rounded-md mt-3">
      <h2><%= pluralize(generation_array.errors.count, "error") %> prohibited this generation_array from being saved:</h2>

      <ul class="list-disc ml-6">
        <% generation_array.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="my-5">
    <%= form.label :prompt %>
    <%= form.text_field :prompt, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:prompt].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:prompt].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :model %>
    <%= form.select :model,
      options_for_select(@model_options, generation_array.model),
      { include_blank: "Select a model" },
      class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:model].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:model].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :cfg_scale %>
    <%= form.text_field :cfg_scale, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:cfg_scale].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:cfg_scale].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :lora_strength %>
    <%= form.number_field :lora_strength, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:lora_strength].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:lora_strength].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :negative_prompt %>
    <%= form.text_field :negative_prompt, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:negative_prompt].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:negative_prompt].any?}] %>
  </div>

  <div class="my-5 flex items-center gap-2">
    <%= form.label :safe_mode %>
    <%= form.checkbox :safe_mode, class: ["block shadow-sm rounded-md border order-first h-5 w-5", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:safe_mode].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:safe_mode].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :steps %>
    <%= form.number_field :steps, class: ["block shadow-sm rounded-md border px-3 py-2 mt-2 w-full", {"border-gray-400 focus:outline-blue-600": generation_array.errors[:steps].none?, "border-red-400 focus:outline-red-600": generation_array.errors[:steps].any?}] %>
  </div>

  <div class="my-5">
    <%= form.label :selected_styles, "Select Styles to Generate" %>
    <div class="mt-2 max-h-64 overflow-y-auto border border-gray-300 rounded-md p-3 bg-gray-50">
      <div class="mb-3 flex gap-2">
        <button type="button" onclick="selectAllStyles()" class="px-3 py-1 bg-blue-600 text-white text-sm rounded hover:bg-blue-500">Select All</button>
        <button type="button" onclick="deselectAllStyles()" class="px-3 py-1 bg-gray-600 text-white text-sm rounded hover:bg-gray-500">Deselect All</button>
      </div>
      <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-2">
        <% @available_styles.each do |style| %>
          <label class="flex items-center space-x-2 text-sm">
            <%= check_box_tag "generation_array[selected_styles][]", style, 
                generation_array.selected_styles&.include?(style), 
                class: "style-checkbox rounded border-gray-300 text-blue-600 focus:ring-blue-500" %>
            <span class="text-gray-700"><%= style %></span>
          </label>
        <% end %>
      </div>
      <p class="text-xs text-gray-500 mt-2">
        Leave all unchecked to generate all available styles (default behavior)
      </p>
    </div>
  </div>

  <script>
    function selectAllStyles() {
      document.querySelectorAll('.style-checkbox').forEach(checkbox => {
        checkbox.checked = true;
      });
    }
    
    function deselectAllStyles() {
      document.querySelectorAll('.style-checkbox').forEach(checkbox => {
        checkbox.checked = false;
      });
    }
  </script>

  <div class="inline">
    <%= form.submit class: "w-full sm:w-auto rounded-md px-3.5 py-2.5 bg-blue-600 hover:bg-blue-500 text-white inline-block font-medium cursor-pointer" %>
  </div>
<% end %>
