<% content_for :title, "Art Gallery - #{truncate(@generation_array.prompt, length: 50)}" %>

<%= turbo_stream_from @generation_array %>

<div class="w-full max-w-7xl mx-auto">
  <% if notice.present? %>
    <div class="mb-8 p-4 bg-gradient-to-r from-green-100 to-emerald-100 border border-green-200 rounded-xl shadow-sm">
      <p class="text-green-700 font-medium flex items-center">
        <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
      </svg>
        <%= notice %>
      </p>
    </div>
  <% end %>

  <!-- Header Section -->
  <div class="mb-8">
    <div class="flex items-center mb-4">
      <%= link_to generation_arrays_path, class: "text-orange-600 hover:text-orange-700 mr-4 transition-colors" do %>
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7"></path>
        </svg>
      <% end %>
      <h1 class="heading-font text-4xl md:text-5xl font-bold bg-gradient-to-r from-orange-600 to-amber-600 bg-clip-text text-transparent">
        Art Gallery
      </h1>
    </div>
    
    <!-- Generation Array Details Card -->
    <div class="card-warm p-6 mb-8">
      <%= render @generation_array %>
    </div>
  </div>

  <!-- Image Gallery Section -->
  <div class="mb-8">
    <div class="flex items-center justify-between mb-6">
      <h2 class="heading-font text-3xl font-semibold text-gray-800">
        Generated Images
        <span class="text-lg text-gray-500 font-normal">(<%= @generation_array.generations.count %> total)</span>
      </h2>
      
      <!-- Gallery Controls -->
      <div class="flex items-center space-x-3">
        <button onclick="downloadAll()" class="btn-secondary text-sm">
          <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 10v6m0 0l-4-4m4 4l4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Download All
        </button>
      </div>
    </div>

    <!-- Image Grid -->
    <div class="image-grid" data-controller="lightgallery">
      <%= render @generation_array.generations, cached: true %>
    </div>
  </div>

  <!-- Action Buttons -->
  <div class="flex flex-wrap gap-4 justify-center">
    <%= link_to "Back to Gallery", generation_arrays_path, class: "btn-secondary" %>
    <%= link_to copy_generation_array_path(@generation_array), class: "btn-primary" do %>
      <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 16H6a2 2 0 01-2-2V6a2 2 0 012-2h8a2 2 0 012 2v2m-6 12h8a2 2 0 002-2v-8a2 2 0 00-2-2h-8a2 2 0 00-2 2v8a2 2 0 002 2z"></path>
      </svg>
      Copy Settings
    <% end %>
    <%= button_to "Delete Collection", @generation_array, method: :delete, 
        class: "btn-danger", 
        data: { turbo_confirm: "Are you sure you want to delete this entire collection? This action cannot be undone." } %>
  </div>
</div>

<script>
  function downloadAll() {
    const links = document.querySelectorAll('[download]');
    links.forEach((link, index) => {
      setTimeout(() => {
        link.click();
      }, index * 100); // Stagger downloads to avoid overwhelming the browser
    });
  }
</script>

